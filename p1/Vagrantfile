# -*- mode: ruby -*-
# vi: set ft=ruby :

# All Vagrant configuration is done below. The "2" in Vagrant.configure
# configures the configuration version (we support older styles for
# backwards compatibility). Please don't change it unless you know what
# you're doing.
Vagrant.configure('2') do |config|

  # set up the first machine
  config.vm.define 'webserver1' do |webserver1|
    webserver1.vm.box = 'debian/buster64'
    webserver1.vm.hostname = 'webserver1'
    webserver1.vm.provider 'virtualbox' do |vb|
      vb.name = 'webserver1_nginx'
      vb.cpus = '1'
      vb.memory = '512'
    end
  end

  # set up the second machine
  config.vm.define 'webserver2' do |webserver2|
    webserver2.vm.box = 'debian/buster64'
    webserver2.vm.hostname = 'webserver2'
    webserver2.vm.provider 'virtualbox' do |vb|
      vb.name = 'webserver2_nginx'
      vb.cpus = '1'
      vb.memory = '512'
    end
  end

end
